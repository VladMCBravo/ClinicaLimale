[MESSAGES CONTROL]
disable=
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    line-too-long,
    import-outside-toplevel,
    broad-except,
    unused-argument,
    too-few-public-methods,
    no-member,
    attribute-defined-outside-init

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=20
max-branches=15
max-statements=60